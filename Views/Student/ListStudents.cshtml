
@model IEnumerable<nyikoStudyGroup.Models.StudentModel>

@{
    ViewBag.Title = "ListStudents";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<h2>ListStudents</h2>

<table class="table" id="studentTable">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model._studentNumber)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model._name)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model._surname)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model._emailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.myLink)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Id)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._studentNumber)
            </td>
            <td class="student-name" id="student">
                @Html.DisplayFor(modelItem => item._name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._emailAddress)
            </td>
            <td>
                <a href="@Url.Content(item.myLink)" class="btn btn-dark" >My Link</a>
            </td>
            <td>
                <a href="@Url.Action("Delete", "Student", new { i = item.Id })" class="btn btn-dark" onclick="Delete(id)">Delete</a>
            </td>
        </tr>
    }

</table>


<script src="~/Scripts/MyJavaScript.js"></script>
